<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_weight="2">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="#000"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/sanomat_regular"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="TRAVEL TIME"
                android:textColor="#fff"
                android:background="@color/careem_red"
                android:textSize="@dimen/h6"/>

            <TextView
                android:id="@+id/travel_time_campaignMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/sanomat_medium"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="00:00:00"
                android:textStyle="bold"
                android:textColor="#e61610"
                android:textSize="@dimen/h2"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.02" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="#000"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/sanomat_regular"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="TOTAL DISTANCE"
                android:textColor="#fff"
                android:background="@color/careem_green_color"
                android:textSize="@dimen/h6"/>

            <TextView
                android:id="@+id/total_distance_campaignMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/sanomat_medium"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="0 KM"
                android:textStyle="bold"
                android:textColor="#e61610"
                android:textSize="@dimen/h2"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
